<%- include('header'); -%>
<div class="loader-wrapper">
  <h1 class="greet"> <%= wish %>&nbsp<%=name%> <br />Your affirmation for the day is....... </h1>
</div>
 <div>
   <br>
   <br>
   <br>
   <br>
   <br>
   <br />
   <br>
   <br>
   <div class="main-display">
     <div class="containerbox">
       <h1 class="BigHeading">
         <%= affirmation %>
       </h1>
     </div>
     <button class="play-button" onclick="responsiveVoice.speak('<%= affirmation%>', 'US English Female');" type="button" value="Play"><i class="playicon far fa-play-circle"></i>Play</button>
   </div>


   <section class="TodoList">
     <h1 class="todoHeading">What are your personal affirmations for the day???</h1>
     <div class="box" id="heading">
       <h1 class="todo"> <%= listTitle %> </h1>
     </div>
     <div class="box fillbox">
       <% newListItems.forEach(function(element){ %>
       <form action="/delete" method="post">
         <div class="item">
           <input type="checkbox" name="checkbox" value="<%= element._id %>" onchange="this.form.submit()">
           <p class="todoItemsdisplay"><%=  element.name  %></p>
         </div>
         <input type="hidden" name="listName" value="<%= listTitle %>"></input>
       </form>

       <% }) %>

       <form class="item" action="/home" method="post">
         <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
         <button class="todo-button" type="submit" name="list" value="<%= listTitle %>">+</button>
       </form>
     </div>
   </section>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
 <script type="text/javascript">
//Navbar
$('#hmb').click(function() {
  $('#menu').css('visibility', 'visible');
});
$('#remove').click(function() {
   $('#menu').css('visibility','hidden');
});
//Loader
   $( document ).ready(function() {
  setTimeout(function(){
    $('.loader-wrapper').fadeOut("slow");
  }, 3000);
});
 </script>
 </body>
</html>
